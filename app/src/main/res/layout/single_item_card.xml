<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:foreground="?android:attr/selectableItemBackground"
        android:focusable="true"
        android:clickable="true"
        android:layout_marginBottom="12dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="@dimen/default_start_end"
        android:layout_marginStart="@dimen/default_start_end"
        android:translationZ="8dp"
        android:outlineSpotShadowColor="@color/colorPrimary"
        android:background="@drawable/order_card_white"
        android:id="@+id/single_item_card"
        android:layout_height="wrap_content">

    <ImageView
            android:layout_width="130dp"
            android:layout_height="131dp"
            tools:srcCompat="@tools:sample/avatars"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="16dp"
            android:layout_marginStart="16dp"
            android:id="@+id/item_img"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="24dp"/>
    <TextView
            tools:text="Xiaomi Mi M ix 3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/item_name_tv"
            app:layout_constraintTop_toTopOf="@+id/item_img"
            app:layout_constraintStart_toEndOf="@+id/item_img"
            android:layout_marginStart="32dp"
            style="@style/product_name"
    />
    <TextView
            android:text="TextView"
            tools:text="USD 160"
            android:textColor="@color/colorPrimary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/item_price_tv"
            android:textStyle="bold"
            android:fontFamily="sans-serif"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/item_name_tv" app:layout_constraintStart_toEndOf="@+id/item_img"
            android:layout_marginStart="32dp"/>
    <TextView
            tools:text="Slate Black"
            android:textAllCaps="false"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/item_color_tv"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/item_quantity_tv"
            app:layout_constraintStart_toEndOf="@+id/item_img"
            android:layout_marginStart="32dp" style="@style/normal_text"

    />
    <TextView
            tools:text="x 1"
            android:textAllCaps="false"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/item_quantity_tv"
            android:textColor="@android:color/black"
            app:layout_constraintBottom_toBottomOf="@+id/item_img"
            app:layout_constraintStart_toEndOf="@+id/item_img" android:layout_marginStart="32dp"
            android:layout_marginBottom="16dp"/>
    <TextView
            tools:text="Packing"
            android:textStyle="italic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent" android:id="@+id/item_state_tv"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="16dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>