<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:clipToPadding="false"
        android:id="@+id/order_item_card"
>

    <TextView
            tools:text="@string/order_id"
            android:fontFamily="sans-serif-medium"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/order_id_tv"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:textSize="19sp"
            android:textColor="@android:color/black"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="16dp" android:layout_marginStart="28dp"/>


    <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:id="@+id/item_list_rc"
            android:overScrollMode="never"
            android:nestedScrollingEnabled="false"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/order_id_tv"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
    >
    </androidx.recyclerview.widget.RecyclerView>


    <Button
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:id="@+id/message_btn"
            app:layout_constraintEnd_toStartOf="@+id/order_details_btn"
            android:textColor="#4A6BF7"
            android:textAllCaps="false"
            android:elevation="7dp"
            app:layout_collapseMode="parallax"
            android:translationZ="4dp"
            android:textSize="18sp"
            android:foreground="?android:attr/selectableItemBackground"
            android:background="@drawable/order_btn_shape_clear"
            android:text="@string/messages"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/item_list_rc"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="28dp"
            android:layout_marginTop="8dp"
    />
    <View
              android:id="@+id/redDot"
            android:layout_width="12dp" android:layout_height="12dp"
            android:foreground="@drawable/button_circle"
            app:layout_constraintTop_toTopOf="@+id/message_btn"
            app:layout_constraintEnd_toEndOf="@+id/message_btn" app:layout_constraintStart_toEndOf="@+id/message_btn"
            app:layout_constraintBottom_toTopOf="@+id/message_btn"/>
    <Button
            android:id="@+id/order_details_btn"
            android:layout_width="0dp"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:text="@string/order_details"
            android:foreground="?android:attr/selectableItemBackground"
            android:elevation="7dp"
            android:translationZ="4dp"
            android:textAllCaps="false"
            android:background="@drawable/order_btn_shape"
            android:layout_height="45dp"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toEndOf="@+id/message_btn"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="28dp"
            app:layout_constraintTop_toTopOf="@+id/message_btn"
            app:layout_constraintBottom_toBottomOf="@+id/message_btn"/>
</androidx.constraintlayout.widget.ConstraintLayout>